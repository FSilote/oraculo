<div class="message">

  <div id="messageOwner">
    <%= image_tag "avatar.png" %>
  </div>

  <div id="messageBody">
    <h4><%= @question.title %></h4>

    <p class="metadata">
      <span class="owner"><%= @question.owner.name %></span>
      <span class="time"><%= time_ago_in_words @question.created_at %></span>
      <%= actions_for_question @question %>
    </p>

    <%= @question.body %>
  </div>

  <%= clearfix %>
</div>

<% @question.answers.each do |answer| %>
  <%= div_for answer, :class => "message" do %>

    <div id="messageOwner">
      <%= image_tag "avatar.png" %>
    </div>

    <div id="messageBody">
      <p class="metadata">
        <span class="owner"><%= answer.owner.name %></span>
        <span class="time"><%= time_ago_in_words answer.created_at %></span>
      </p>

      <p><%= answer.body %></p>
    </div>

    <%= render "report_abusive", answer: answer if signed_in? %>

    <%= clearfix %>

  <% end %>
<% end %>

<%= render "answers/form", question: @question, answer: Answer.new if signed_in? %>