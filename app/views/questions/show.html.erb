<div class="question">

  <div id="questionOwner">
    <%= image_tag "avatar.png" %>
  </div>

  <div id="questionBody">
    <h4><%= @question.title %></h4>

    <p class="metadata">
      <span class="owner"><%= @question.owner.name %></span>
      <span class="time"><%= time_ago_in_words @question.created_at %></span>
      <%= actions_for_question @question %>
    </p>

    <%= @question.body %>
  </div>

  <%= clearfix %>
</div>


