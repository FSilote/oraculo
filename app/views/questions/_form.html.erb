<div id="messageOwner">
  <%= user_avatar current_user %>
</div>

<div id="messageBody">
  <%= form_for(@question, :html => { :multipart => true }) do |f| %>
    <%= f.error_messages %>

    <div class="field">
      <%= f.label :title, "What's your question?" %><br />
      <%= f.text_field :title, placeholder: "How can I upgrade my account?", size: 40 %>
    </div>

    <div class="field">
      <%= f.label :body, "Give more details as much as you can" %><br />
      <%= f.text_area :body, rows: 10, cols: 60 %>
    </div>

    <% if @question.new_record? %>
      <%= render :partial => "image_to_upload", :locals => { :f => f } %>
    <% else %>
      <%= render :partial => "image_to_remove", :collection => @question.images, :locals => { :f => f } %>
    <% end %>

    <div class="actions">
      <%= submit_button %> or <%= link_to_cancel %>
    </div>
  <% end %>
</div>

<%= clearfix %>
